
<div class="row p-3" class="index-main">
  <div class="col-lg-3">
    <% if policy(Studio).create? %>
      <%= link_to "Add your studio", new_studio_path, class: "btn btn-orange text-center" %>
    <% end %>
  </div>
  <div class="col-lg-3">
    <%= simple_form_for :search, url: studios_path, method: "GET", html: { class: 'form-inline' } do |f| %>
      <%= f.input :name, label: false, input_html: {value: ""} %>
      <%= f.submit "Search", class: "btn-search" %>
    <% end %>
  </div>
</div>

<div class="container pl-3">
  <h1 class="p-3"> Here are the studios</h1>
    <div class="row">
      <div class="col-12 col-md-6 col-lg-6">
        <div id="map"
          data-markers="<%= @markers.to_json %>"
          data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
        </div>
        <div class="row">
          <% @studios.each do |studio| %>
            <div class="col-5 col-md-5 col-lg-5 card-body card text-white bg-dark m-3">
              <div>
                <h3><%= link_to studio.name, studio_path(studio.id) %></h3>
                <p><%= studio.address %></p>
                <p><%= studio.equipment %></p>
                <p><%= studio.rate %>â‚¬/hour</p>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
</div>
