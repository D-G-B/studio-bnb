<div class="container">
  <div class="row justify-content-center">
    <div id="text-white" class="col-md-8">
      <h1> Your studio details ğŸ™‚ </h1>
      <%= simple_form_for @studio do |f| %>
        <%= f.input :name %>
        <%= f.input :address %>
        <%= f.input :equipment, as: :select, collection: Studio::CATEGORIES %>
        <%= f.input :rate %>
        <%= f.hidden_field :latitude %>
        <%= f.hidden_field :longitude %>
        <div class="d-flex justify-content-between">
          <%= f.submit "Add your studio!", class: "btn btn-orange" %> <%= link_to "Go back", studios_path, class: "btn btn-secondary" %>
          <% end %>
        </div>
    </div>
  </div>
</div>



