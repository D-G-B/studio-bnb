<div class="container">
  <div class="row justify-content-center p-3">
    <h1><%= @studio.name %></h1>
  </div>

  <div class="row">
    <div class="col-lg-4">
      <h3>Address</h3>
      <p><%= @studio.address %></p>
    </div>
    <div class="col-lg-4">
      <h3>Equipment available</h3>
      <p><%= @studio.equipment %></p>
    </div>
    <div class="col-lg-4">
      <h3>Hourly rate</h3>
      <p><%= @studio.rate %>€/hour</p>

    <div>
      <% if policy(@studio).update? %>
      <%= link_to 'Edit', edit_studio_path(@studio), class: 'ml-3 text-warning' %>
      <% end %>
    </div>

    <div>
    <% if policy(@studio).destroy? %>
      <%= link_to '<i class="fa fa-trash destroy_booking"></i>'.html_safe, studio_path(@studio), method: :delete, data: { confirm: "Are you sure?" } %>
    <% end %>

    </div>

    <ul class="list-group">
      <% @studio.bookings.each do |booking| %>
        <li class="list-group-item">
          <%= booking.start_date %> - <%= booking.end_date %> - €<%= booking.total_price %>
          <%= link_to '<i class="fa fa-trash destroy_booking"></i>'.html_safe, booking_path(booking), method: :delete, data: { confirm: "Are you sure?" } %>
        </li>
      <% end %>
    </ul>
  </div>

  <div>
    <h3 class="mt-3">Book this Studio Here</h1>

    <%= simple_form_for [@studio, @booking] do |f| %>

      <div class="form-inputs">
        <%= f.input :start_date, as: :datetime %>
        <%= f.input :end_date, as: :datetime %>
      <div class="form-actions">
        <%= f.button :submit, class: "btn btn-outline-success" %>
      </div>
    <% end %>
  </div>

  <%= link_to "Return to all studios", studios_path %>

</div>
